<%- include('../partials/header') %>

<section id="show-page">
  <div>Title:</div>
  <div><%= tip.title %></div>

  <br /><br />
  <h2>Comments</h2>
  <form
    id="add-comment-form"
    method="POST"
    action="/tips/<%= tip._id %>/comments"
  >
    <label>Comment</label>
    <textarea name="content"></textarea>
    <input type="submit" value="Add Comment" />
  </form>

  <% if (tip.comments.length) { %>
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
        <th>Comment</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% let total = 0 %> <% tip.comments.forEach(function(c) { %> <%let edit =
      false %> <% if (edit === false) {%>
      <tr>
        <td class="comment-user">
          <img
            alt="avatar"
            src="<%= c.user.avatar %>"
            referrerpolicy="no-referrer"
          /><%= c.user.name %>
        </td>
        <td><%= c.createdAt.toLocaleDateString() %></td>
        <td><%= c.content %></td>
        <td>
          <% if (user?._id.equals(c.user._id)) { %>
          <form action="/comments/<%= c._id %>?_method=DELETE" method="POST">
            <button type="submit">DELETE</button>
          </form>
          <% } %>
        </td>
        <td>
          <button class="editBtn"><a href="/comments/<%=c._id%>/edit">Edit</a></button>
        </td>
      </tr>
      <% } else { %>
      <tr>
        <td class="comment-user">
          <img
            alt="avatar"
            src="<%= c.user.avatar %>"
            referrerpolicy="no-referrer"
          /><%= c.user.name %>
        </td>
        <td>
          <form
            id="edit-comment-form"
            method="POST"
            action="/comments/<%= c._id %>?_method=PUT"
          >
            <textarea name="content"><%= c.content %></textarea>
            <input type="submit" value="Update" />
          </form>
        </td>
      </tr>
      <% } %> <% }); %>
      <tr>
        <td colspan="3"></td>
        <td>
          <strong><%= (total / tip.comments.length).toFixed(1) %></strong>
        </td>
      </tr>
    </tbody>
  </table>
  <% } else { %>
  <h5>No Comments Yet</h5>
  <% } %> <%- include('../partials/footer') %>
</section>
